<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.inventory.dao.ProductDao">

    <select id="findById" resultType="com.inventory.model.product.Product">
        SELECT * FROM product WHERE id = #{id}
    </select>

    <select id="findByRfidTag" resultType="com.inventory.model.product.Product">
        SELECT * FROM product WHERE rfid_tag = #{rfidTag}
    </select>

    <select id="findByBarcode" resultType="com.inventory.model.product.Product">
        SELECT * FROM product WHERE barcode = #{barcode}
    </select>

    <insert id="insert" parameterType="com.inventory.model.product.Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (name, barcode, rfid_tag, description, unit_weight)
        VALUES (#{name}, #{barcode}, #{rfidTag}, #{description}, #{unitWeight})
    </insert>

</mapper>
